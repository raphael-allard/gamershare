<li class="game-card mt-2 text-center">
  <div>
    <h2><%= @game.name %></h2>
    <i class="fas fa-heart"></i>
  </div>

  <div class="d-flex justify-content-around">
    <div>
      <p>NOSTALGIA</p>
      <p><%= @game.nostalgia_point %></p>
    </div>

    <div>
      <p>CITY</p>
      <p><%= @game.owner.city %></p>
    </div>

    <div>
      <p>PLATFORM</p>
      <p><%= @game.platform %></p>
    </div>
  </div>
</li>

<div class="d-flex justify-content-between align-items-center navbar-gamershare">
  <%= link_to "GamerShare", root_path, class: "logo" %>

  <div class="d-flex align-items-center">
    <% if @user.nil? %>
      <%= render(ButtonComponent.new(path: new_user_session_path, class_name: "button-secondary").with_content("Sign in")) %>
      <%= render(ButtonComponent.new(path: new_user_registration_path, class_name: "button-primary").with_content("Sign up")) %>
    <% else %>
      <%= render(ButtonComponent.new(path: games_path, class_name: "button-secondary").with_content("Find a game")) unless (controller_name == "games" && action_name == "index") %>
      <%= render(ButtonComponent.new(path: new_game_path, class_name: "button-primary").with_content("Add a game")) %>
      <%= render(DropdownComponent.new(user: @user)) %>
    <% end %>
  </div>
</div>
